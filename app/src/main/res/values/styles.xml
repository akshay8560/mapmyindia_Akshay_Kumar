<resources>

    <style name="DemoTheme" parent="Theme.AppCompat.Light">


        <item name="colorControlNormal">@color/base_color</item>
        <item name="colorControlActivated">@color/base_color</item>
        <item name="colorControlHighlight">@color/base_color</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/base_color</item>
        <item name="colorPrimaryDark">@color/base_color</item>
        <item name="android:textColorPrimary">@color/base_color</item>

    </style>

    <style name="TransparentProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DemoTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DemoTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DemoTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>